input[type="text"].input,input[type="email"].input,input[type="password"].input,input[type="number"].input
  padding 10px
  font-size 15px
  border solid 1px #dbdbdb
  background-color #fff
  vp(border-radius,3px)
  color #2a2a2a
  width 300px
  max-width 100%
  &::placeholder
    color #dadada

textarea.input
  padding 10px
  font-size 15px
  border solid 1px #dbdbdb
  background-color #fff
  vp(border-radius,3px)
  color #2a2a2a
  width 300px
  max-width 100%
  height 150px
  &::placeholder
    color #dadada

// Group Form
.group-form
  & > .group-input,& > .group-submit
    margin-bottom 20px
    &:last-child
      margin-bottom 0
  & > .group-input
    & > .group-input-title,& > .group-input-content,& > .group-input-description
      margin-bottom 5px
      &:last-child
        margin-bottom 0
    & > .group-input-title
      font-size 13px
    & > .group-input-description
      font-size 10px
