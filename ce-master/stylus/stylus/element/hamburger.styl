var_hamburger_height := 50px
var_hamburger_bgc := #FFF

var_hamburger_height_center :=  var_hamburger_height / 2

.hamburger
  width var_hamburger_height
  height var_hamburger_height
  cursor pointer
  & > ul
    position relative
    top 0
    left 0
    width var_hamburger_height
    height var_hamburger_height
    & > li
      height 1px
      width var_hamburger_height
      background-color #fff
      position absolute
      left 0
      &:nth-child(1)
        top 0
      &:nth-child(2)
        top var_hamburger_height_center
      &:nth-child(3)
        bottom 0
