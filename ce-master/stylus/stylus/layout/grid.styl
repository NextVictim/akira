.grids
  width 100%
  gutter_w = 1%;
  all_gutter_w = gutter_w * 11;
  grids_w = 100% - all_gutter_w;
  grid_w = grids_w / 12;
  margin-right -1% * gutter_w
  vp(display,flex)
  vp(flex-direction,row)
  vp(flex-wrap,wrap)
  for num in (1..12)
    & > .grid{num}
      if num == 1
        width grid_w * (num)
      else
        grid_plus_w = (num) - 1;
        width grid_w * (num) + grid_plus_w
      margin-right gutter_w
      &:last-child
        margin-right 0
  // SP
  +disp_size_sp()
    margin-right 0
    & > .grid1,& > .grid2,& > .grid3,& > .grid4,& > .grid5,& > .grid6,& > .grid7,& > .grid8,& > .grid9,& > .grid10,& > .grid1,& > .grid12
      width 100%
      margin-right 0
  &.grids-sp-mb-10
    +disp_size_sp()
      & > .grid1,& > .grid2,& > .grid3,& > .grid4,& > .grid5,& > .grid6,& > .grid7,& > .grid8,& > .grid9,& > .grid10,& > .grid1,& > .grid12
        margin-bottom 10px
        &:last-child
          margin-bottom 0
  &.grids-sp-mb-20
    +disp_size_sp()
      & > .grid1,& > .grid2,& > .grid3,& > .grid4,& > .grid5,& > .grid6,& > .grid7,& > .grid8,& > .grid9,& > .grid10,& > .grid1,& > .grid12
        margin-bottom 20px
        &:last-child
          margin-bottom 0
  &.grids-sp-mb-30
    +disp_size_sp()
      & > .grid1,& > .grid2,& > .grid3,& > .grid4,& > .grid5,& > .grid6,& > .grid7,& > .grid8,& > .grid9,& > .grid10,& > .grid1,& > .grid12
        margin-bottom 30px
        &:last-child
          margin-bottom 0
