.archive-post-thumbnail,.archive-column-post-thumbnail
  width 100%
  & > li
    width 100%
    margin-bottom 20px
    & > a
      display block

.archive-post-thumbnail
  & > li
    &:last-child
      margin-bottom 0
    & > a
      & > article
        vp(display,flex)
        vp(flex-direction,row)
        vp(flex-wrap,wrap)
        vp(justify-content,space-between)
        +disp_size_sp()
          vp(display,flex)
          vp(flex-direction,column)
          vp(flex-wrap,wrap)
          vp(justify-content,flex-start)
        & > .text
          width 72.5%
          order 2
          +disp_size_sp()
            width 100%
          & > h2,& > p.date,& > p.excerpt
            margin-bottom 5px
            &:last-child
              margin-bottom 0
          & > h2
            font-size 20px
            font-weight bold
            line-height 140%
          & > p.date
            font-size 11px
            line-height 140%
          & > p.excerpt
            font-size 13px
            line-height 140%
        & > .thumbnail
          width 25%
          order 1
          bgi()
          +disp_size_sp()
            width 100%
            margin-bottom 5px

.archive-column-post-thumbnail
  vp(display,flex)
  vp(flex-direction,row)
  vp(flex-wrap,wrap)
  margin-left -20px
  & > li
    width 25%
    margin-left 20px
    & > a
      & > article
        vp(display,flex)
        vp(flex-direction,column)
        vp(flex-wrap,wrap)
        vp(justify-content,flex-start)
        & > .text
          width 100%
          order 2
          & > h2
            font-size 16px
            font-weight bold
            line-height 140%
          & > p.date
            font-size 11px
            line-height 140%
        & > .thumbnail
          display block
          width 100%
          margin-bottom 5px
          bgi()
          order 1
