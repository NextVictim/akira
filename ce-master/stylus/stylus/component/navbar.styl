.navbar
  height var_navbar_height
  color var_navbar_fontc
  background-color var_navbar_bgc
  position relative
  z-index 1
  & > .contents
    vp(display,flex)
    vp(flex-direction,row)
    vp(flex-wrap,wrap)
    vp(justify-content,space-between)
    vp(align-items,center)
    height var_navbar_height
    +disp_size_sp()
      display block
      width 100%!important
    // Logo
    & > .logo
      height var_navbar_height
      vp(display,flex)
      vp(flex-direction,column)
      vp(flex-wrap,wrap)
      vp(justify-content,center)
      vp(align-items,center)
      & > .navbar-spmenu-left,& > .navbar-spmenu-left
        display none
      & > .logo-text
        vp(display,flex)
        vp(flex-direction,column)
        vp(flex-wrap,wrap)
        vp(justify-content,center)
        vp(align-items,center)
        a
          font-size 18px
          line-height 18px
          font-weight bold
          text-align center
          &:hover
            text-decoration none
      & > .logo-img
        a
          display block
          vp(display,flex)
          vp(flex-direction,column)
          vp(flex-wrap,wrap)
          vp(justify-content,center)
          vp(align-items,center)
          img
            height var_navbar_height - 10px
            width auto
      +disp_size_sp()
        width 100%
        vp(display,flex)
        vp(flex-direction,row)
        vp(flex-wrap,wrap)
        vp(justify-content,space-between)
        vp(align-items,center)
        & > .logo-text,& > .logo-img
          order 2
          width 70%
          text-align center
        & > .navbar-spmenu-left
          order 1
          width 15%
          display block
          text-align left
        & > .navbar-spmenu-right
          order 3
          width 15%
          display block
          text-align right
        & > .navbar-spmenu-left,& > .navbar-spmenu-right
          vp(display,flex)
          vp(flex-direction,column)
          vp(flex-wrap,wrap)
          vp(justify-content,center)
          vp(align-items,center)
          & > .drawr-button
            display inline-block
            cursor pointer
            vdrawe_button_h = var_navbar_height - 30px
            width vdrawe_button_h
            height vdrawe_button_h
            position relative
            & > .line
              width 100%
              height 1px
              background-color #000
              position absolute
              &:nth-child(1)
                top 0
              &:nth-child(2)
                vdrawe_button_h_half = vdrawe_button_h / 2
                top vdrawe_button_h_half - 1
              &:nth-child(3)
                bottom 0
    & > .menu
      height var_navbar_height
      vp(display,flex)
      vp(flex-direction,column)
      vp(flex-wrap,wrap)
      vp(justify-content,center)
      vp(align-items,center)
      & > ul
        vp(display,flex)
        vp(flex-direction,row)
        vp(flex-wrap,wrap)
        & > li
          margin-right 10px
          &:last-child
            margin-right 0
          & > a
            display block
            &:hover
              text-decoration none
          & > ul
            display none
      +disp_size_sp()
        display block
        display none
        width 100%
        height auto
        color var_navbar_fontc
        background-color var_navbar_bgc
        & > ul
          display block
          & > li
            & > a
              color var_navbar_fontc
              background-color var_navbar_bgc
              padding-left 10px
              padding-right 10px

  &.navbar-underline
    bs = 0 -1px 0 alpha(#000,0.1) inset
    vp(box-shadow,bs)
  &.navbar-underline-shadow
    bs = 0 -1px 0 alpha(#000,0.1) inset,0 1px 3px alpha(#000,0.05)
    vp(box-shadow,bs)
    & > .contents
      & > .menu
        +disp_size_sp()
          bs = 0 -1px 0 alpha(#000,0.1) inset,0 1px 3px alpha(#000,0.05)
          vp(box-shadow,bs)
